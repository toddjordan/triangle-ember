

{{#each events as |item|}}
  <article>
    <header>
      <h2>{{item.name}}</h2>
    </header>
    <section>Location: {{item.venue.name}}</section>
    <section>
      <p>
        {{safe-string item.description}}
      </p>
    </section>
    <section><a href="{{item.link}}">Find out details and RSVP on meetup.com</a></section>
  </article>
  <hr>
{{/each}}

{{yield}}
